.side-messages-header
  .side-messages-header__box
    = current_user.name
  .side-messages-header__logo
    %ul
      %li 
        = link_to new_group_path do
          = icon('fas', 'edit')
      %li
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
.side-messages-content
  .side-messages-content__group
    - current_user.groups.each do |group|
      .side-messages-content__group--title
        = link_to group_messages_path(group) do
          .side-messages-content__group--title
            = group.name
          .side-messages-content__group--chat
